<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:elevation="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="404dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/otherP"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/profilebg"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/miniProfilePic"
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profilebg" />

                <TextView
                    android:id="@+id/userCustomEmail"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="left|center"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="337dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userCustomComment"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/menu" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="277dp"
                    app:srcCompat="@drawable/choosesphoto" />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="352dp"
        android:layout_height="37dp"
        android:background="@color/cardview_shadow_end_color">

        <LinearLayout
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/mHeartGray"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@color/cardview_shadow_end_color"
                android:src="@drawable/ic_favorite_grey"
                android:visibility="visible" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="19dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="5 Likes"
                android:textColor="@color/menu"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/cardview_shadow_end_color"
                android:src="@drawable/ic_mode_comment_grey_600_24dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="10 Comments"
                android:textColor="@color/menu"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>